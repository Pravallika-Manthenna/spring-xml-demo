<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id = "actor" class = "com.stackroute.domain.Actor">
        <constructor-arg name="name" value ="Kiran" index="0" type="java.lang.String"></constructor-arg>
        <constructor-arg name="gender" value ="Male" index="1" type="java.lang.String"></constructor-arg>
        <constructor-arg name="age" value="24" index="2" type="int"></constructor-arg>
    </bean>

    <bean id = "actor1" class = "com.stackroute.domain.Actor">
        <constructor-arg name="name" value ="Pravallika" index="0" type="java.lang.String"></constructor-arg>
        <constructor-arg name="gender" value ="female" index="1" type="java.lang.String"></constructor-arg>
        <constructor-arg name="age" value="24" index="2" type="int"></constructor-arg>
    </bean>

    <bean id = "actor2" class = "com.stackroute.domain.Actor">
        <constructor-arg name="name" value ="Pavani"  index="0" type="java.lang.String" ></constructor-arg>
        <constructor-arg name="gender" value ="female" index="1" type="java.lang.String"></constructor-arg>
        <constructor-arg name="age" value="24" index="2" type="int"></constructor-arg>
    </bean>


    <bean name = "Movie,Movie1" class = "com.stackroute.domain.Movie" scope="prototype">

        <constructor-arg name="actor" ref="actor"></constructor-arg>
    </bean>

</beans>

